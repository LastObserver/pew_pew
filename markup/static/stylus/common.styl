// Common styles of the project

html, body
  height 100%
  background #000

.game
  width 100%
  height 100vh
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items center
  
.controls
  height 24px
  display flex

.field
  background #000
  position relative
  border 2px solid #fff

  &_started
    cursor none

.boi
  background #fff
  width 24px
  height 24px
  border-radius 50%
  position absolute
  transition all .001s
  
  
.button
  z-index 1
  border-radius 0
  width 100px
  height 24px
  font-size 16px
  background #000
  color #fff
  outline none
  border none
  transition .3s ease
  cursor pointer
  border 2px solid #fff
  border-bottom none
  
  & + &
    border-left none
  
  &:hover
    background #fff
    color #000